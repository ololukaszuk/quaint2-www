# BTC Market Analyzer Configuration
# ===================================

# Server Configuration
API_PORT=8753
APP_BASE_URL=https://quaint2.example.com

# ML Data API Configuration
ML_API_URL=https://192.168.100.14:8448/api/v1
ML_API_KEY=your_api_key_here

# SSL Verification (set to false for self-signed certificates)
ML_API_VERIFY_SSL=false

# Analysis Polling Intervals (in milliseconds)
MARKET_ANALYSIS_POLL_INTERVAL=15000
LLM_ANALYSIS_POLL_INTERVAL=60000
MARKET_SIGNALS_POLL_INTERVAL=15000

# Notification Settings
ENABLE_BROWSER_NOTIFICATIONS=true
ENABLE_SOUND_NOTIFICATIONS=true

# Volatility Alert Threshold (percentage change within 1 minute window)
VOLATILITY_ALERT_THRESHOLD=0.5

# Default Chart Interval
DEFAULT_CHART_INTERVAL=1m

# Max historical data points
MAX_CANDLES=500
MAX_TRADES=100
MAX_ORDERBOOK_LEVELS=20
